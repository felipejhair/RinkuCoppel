@{
    ViewData["Title"] = "Añadir Movimiento";
}

<section class="mb-4 mb-4 mx-md-5 px-md-5">
    <div class="card">
        <div class="p-3 p-md-5">
            <h1>Añadir Movimiento</h1>
            <hr />
            <form>
                <div class="row">
                    <div class="mb-4 col-md-6">
                        <input class="form-control" type="text" placeholder="Numero" name="numero_emp" onkeyup="searchUser()" id="numero_emp"/>
                    </div>
                    <div class="mb-4 col-md-6">
                        <input class="form-control" type="text" placeholder="Nombre" name="nombre_emp" id="nombre_emp" readonly />
                    </div>
                    <div class="mb-4 col-md-6">
                        <input class="form-control" type="text" placeholder="Rol" name="rol_emp" id="rol_emp" readonly />
                    </div>
                    <div class="mb-4 col-md-6">
                        <select class="form-control" id="">
                            <option value="">Selecciona un mes</option>
                            <option value="1">Enero</option>
                            <option value="2">Febrero</option>
                            <option value="3">Marzo</option>
                            <option value="4">Abril</option>
                            <option value="5">Mayo</option>
                            <option value="6">Junio</option>
                            <option value="7">Julio</option>
                            <option value="8">Agosto</option>
                            <option value="9">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="12">Noviembre</option>
                            <option value="13">Diciembre</option>
                        </select>
                    </div>
                        <div class="mb-4 col-md-6">
                            <input class="form-control" type="text" placeholder="Cantidad de entregas" name="entregas" />
                        </div>
                    <div>
                        <button class="btn btn-info btn-block w-25">Agregar</button>
                    </div>
                </div>

            </form>
        </div>

    </div>
</section>
<script>
    function searchUser(){
        var numero = $("#numero_emp").val();

        if (numero.length == 4){
            $.ajax({
                url: '/Nomina/GetEmpleado',
            type: 'get',
            dataType: 'json',
            contentType: 'application/json',
            data: {
                numero: numero
            },
            success: function (data){
                console.log(data);
            },
            error: function (error){
                console.log(error);
            }
        });
        }
        
    }
</script>