@model Rinku.Models.ViewModel.RolViewModel;
@{
    ViewData["Title"] = "Añadir Rol";
}

<section class="mb-4 mb-4 mx-md-5 px-md-5">
    <partial name="_Alert" />
    <div class="card">
        <div class="p-3 p-md-5">
            <h1>Añadir rol</h1>
            <hr />
            <form asp-controller="Nomina" asp-action="AddRol" method="post">
                <div class="row">
                    <div class="mb-4 col-md-6">
                        <input asp-for="Name" class="form-control" type="text" placeholder="Rol" name="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div>
                        <button class="btn btn-info btn-block w-25">Agregar</button>
                    </div>
                </div>

            </form>
        </div>

    </div>
</section>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}