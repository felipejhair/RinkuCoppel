@{
    var alertClass = (string)TempData["_alert.alertClass"];
    var message = (string)TempData["_alert.message"];

    if (alertClass != null && message != null)
    {
        <div class="alert alert-@alertClass alert-dismissible fade show alert-message" role="alert" id="alert-ChemiStore">
            <strong>
                @switch (alertClass)
                {
                    case "success":
                        break;
                    case "danger":
                        break;
                }
            </strong>
            @message

        </div>


    }
}

<script>
    var time;

    function start() {
        time = setInterval(function () {
            next();
        }, 3000);
    }

    function stop() {
        clearInterval(time);
    }

    function next() {
        fadOut();
    }

    function fadOut() {
        $("#alert-ChemiStore").animate({
            opacity: 0
        }, 500, function () {
            $("#alert-ChemiStore").remove();
        });
    }

    start();

    $("#alert-ChemiStore").mouseover(function () {
        stop();
    });

    $("#alert-ChemiStore").mouseout(function () {
        start();
    });

</script>

<style>
    #alert-ChemiStore {
        box-shadow: 0 1px 3px rgb(0 0 0 / 12%), 0 1px 2px rgb(0 0 0 / 24%);
        transition: all .3s cubic-bezier(0,0,.5,1);
        border-radius: 1em;
    }

        #alert-ChemiStore:hover {
            box-shadow: 2px 4px 16px rgb(0 0 0 / 16%);
            transform: scale3d(1.01,1.01,1.01);
        }
</style>